import { useMemo, useState } from 'react'

type Price = {
  title: string
  subtitle: string
  price: string
  perks: string[]
  highlight?: boolean
}

type Faq = {
  q: string
  a: string
}

function cx(...classes: Array<string | false | null | undefined>) {
  return classes.filter(Boolean).join(' ')
}

function Badge({ children }: { children: React.ReactNode }) {
  return (
    <span className="group inline-flex items-center rounded-full border border-neo-line/70 bg-white/5 px-2.5 py-1 text-xs font-medium text-white/80 shadow-[0_0_0_1px_rgba(34,211,238,.12)] hover:shadow-[0_0_0_1px_rgba(34,211,238,.25),0_0_20px_rgba(34,211,238,.15)] transition-all">
      <span className="inline-block h-1.5 w-1.5 rounded-full bg-neo-cyan mr-1.5 group-hover:animate-pulse" />
      {children}
    </span>
  )
}

function SectionTitle({
  kicker,
  title,
  subtitle,
}: {
  kicker: string
  title: string
  subtitle: string
}) {
  return (
    <div className="mx-auto mb-10 max-w-2xl text-center">
      <div className="mb-3 flex items-center justify-center gap-2">
        <Badge>{kicker}</Badge>
        <span className="h-px w-20 bg-gradient-to-r from-transparent via-neo-line to-transparent" />
      </div>
      <h2 className="text-balance bg-gradient-to-r from-white via-white to-white/70 bg-clip-text text-3xl font-semibold tracking-tight text-transparent sm:text-4xl">
        {title}
      </h2>
      <p className="mt-3 text-pretty text-sm leading-relaxed text-white/70 sm:text-base">
        {subtitle}
      </p>
    </div>
  )
}

